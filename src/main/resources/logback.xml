<configuration>
    <appender name="FILEOUT" class="ch.qos.logback.core.FileAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <file>logs/errors.log</file>
    </appender>

    <root level="ERROR">
        <appender-ref ref="FILEOUT" />
    </root>
</configuration>